<main class="blog-post">
    <div class="container">
        <h1 class="edica-page-title" data-aos="fade-up">@Model.title</h1>
        <p class="edica-blog-post-meta" data-aos="fade-up" data-aos-delay="200">Written by @Model.aurthor• @Model.CreatedOn• Featured • 4 Comments</p>
        <section class="blog-post-featured-img" data-aos="fade-up" data-aos-delay="300">
            <img src="@Model.CoverImage" alt="featured image" class="w-100">
        </section>
        <section class="post-content">

            @Html.Raw(Model.content)



        </section>

        <div class="row-cols-2 btn-group-lg" style="color:white; padding-bottom:10px">
            <a class="btn btn-primary btn-lg">Edit</a>
