@model ourfitnessplan.Models.tbl_posts

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Scripts
{
    <link href="~/Content/Blogcss.css" rel="stylesheet" />
  
